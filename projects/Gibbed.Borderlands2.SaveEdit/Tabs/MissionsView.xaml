<UserControl x:Class="Gibbed.Borderlands2.SaveEdit.MissionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:cal="http://www.caliburnproject.org"
             mc:Ignorable="d"
             d:DesignWidth="720"
             d:DesignHeight="480">
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="UserControl">
            <Setter Property="Background"
                    Value="White" />
        </Style>
    </d:DesignerProperties.DesignStyle>
    <DockPanel LastChildFill="True">
        <GroupBox DockPanel.Dock="Top"
                  Header="Playthrough">
            <!--<ComboBox ItemsSource="{Binding StoryPlaythroughs}"
                      SelectedValue="{Binding SelectedPlaythrough, Mode=OneWayToSource}"
                      DisplayMemberPath="Title"
                      SelectedValuePath="Index">
            </ComboBox>-->
        </GroupBox>
        <ListBox Height="435" VerticalAlignment="Bottom" Width="213" HorizontalAlignment="Left"
                 ItemsSource="{Binding MissionList}" DisplayMemberPath="Name" SelectedValuePath="Number"
                 SelectedValue="{Binding SelectedMission}" />
        <Label Content="{Binding TotalLabel}" Height="457" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0.6,0,0" Width="473" />
    </DockPanel>
</UserControl>